# Define scripts
read -r -d '' EXPECTEDSCRIPTS cat $(.header.script)

STATUS=0
FILESSCRIPTS=$(find . -name "*.sh" -not -path "./vendor/*")
FILESSOURCE=$(find .  -name "*.rs" -not -path "./vendor/*")

for FILE in $FILESCRIPTS; do

    # Bypass files here
    if [ "$FILE" == "ignore.me" ]; then
        continue
    fi

    # Replace the actual year with DATE so we can ignore the year when checking for the license header.
    HEADER=$(head -n 13 $FILE | sed -E -e 's/Copyright © [0-9]+/Copyright © DATE/')
    if [ "$HEADER" != "$EXPECTEDSCRIPTS" ]; then
      echo "incorrect license header: $FILE"
      STATUS=1
    fi

done

exit $STATUS