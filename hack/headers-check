status=0

EXPECTEDSCRIPT=$(cat .header.script)
EXPECTEDSOURCE=$(cat .header.source)
SCRIPTS=$(find . -name "*.sh" -not -path "./vendor/*")
SOURCES=$(find .  -name "*.rs" -not -path "./vendor/*")

### Check Scripts
for FILE in $SCRIPTS; do

    # Bypass files here
    if [ "$FILE" == "ignore.me" ]; then
        continue
    fi

    # Replace the actual year with DATE so we can ignore the year when checking for the license header.
    HEADER=$(head -n 13 $FILE | sed -E -e 's/Copyright © [0-9]+/Copyright © DATE/')
    if [ "$HEADER" != "$EXPECTEDSCRIPT" ]; then
      echo "incorrect (script) license header: $FILE"
      STATUS=1
    fi

done

### Check Source Files
for FILE in $SOUCRES; do

    # Bypass files here
    if [ "$FILE" == "ignore.me" ]; then
        continue
    fi

    # Replace the actual year with DATE so we can ignore the year when checking for the license header.
    HEADER=$(head -n 13 $FILE | sed -E -e 's/Copyright © [0-9]+/Copyright © DATE/')
    if [ "$HEADER" != "$EXPECTEDSOURCE" ]; then
      echo "incorrect (source) license header: $FILE"
      STATUS=1
    fi

done

exit $STATUS